{% extends 'layout/layout.html.twig' %}

{% block title %}
    My App
{% endblock %}

{% block body %}

    {% include 'components/navbar.html.twig' %}

    <div class="container">
        <h1>Comments page</h1>
        <div class="card">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">title</th>
                    <th scope="col">content</th>
                    <th scope="col">created at</th>
                    <th scope="col">#</th>
                </tr>
                </thead>
                <tbody id="bodyForInsert">
                   {% for comment in comments %}
                       <tr>
                           <td>
                               {{ comment.id }}
                           </td>
                           <td>
                               {{ comment.title }}
                           </td>
                           <td class ="text-break">
                               {{ comment.content }}
                           </td>
                           <td>
                               {{ comment.created_at }}
                           </td>
                           <td>
                               <a class="btn btn-primary" href="/comment/{{ comment.id }}">Open</a>
                               <button id="deleteButton" class="btn btn-primary" data-id={{ comment.id }}
                                       type="button">Delete</button>
                           </td>
                       </tr>
                   {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <script src="/assets/javascript/infiniteScroll.js" type="module"></script>
{% endblock %}
